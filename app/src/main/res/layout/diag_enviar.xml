<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/st_borde"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:theme="@style/TemaDialogo"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <com.google.android.material.textfield.TextInputLayout

            android:id="@+id/InputMesaje"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:contentDescription="Es un texto"
            app:boxBackgroundColor="#9C3F3F"
            app:counterEnabled="true"
            app:counterMaxLength="50">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EditMensaje"
                android:layout_width="256dp"
                android:layout_height="109dp"
                android:layout_gravity="center"
                android:background="@drawable/dg_borde"
                android:gravity="center"
                android:textColor="#000000"
                android:theme="@style/TemaDialogo" />

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/Enviar"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Enviar" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>